<li>
  <span class="content">
  <%= link_to exercise.name, exercise_path(exercise) %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(exercise.created_at) %> ago.
  </span>
   <% if current_user?(exercise.user) %>
    <%= link_to "delete", exercise, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: exercise.name %>
  <% end %>
</li>