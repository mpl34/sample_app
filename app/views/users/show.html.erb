<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
<section>
	<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>
</section>
<section>
      <%= render 'shared/stats' %>
    </section>
</aside>
<div class="span8">
   <%= render 'follow_form' if signed_in? %>
    <% if @user.exercises.any? %>
      <h3>Exercises (<%= @user.exercises.count %>)</h3>
      <ol class="exercises">
        <%= render @exercises %>
      </ol>
      <%= will_paginate @exercises %>
    <% end %>
  </div>

</div>